<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_root"
        android:layout_width="match_parent"
        android:layout_height="509dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp">

        <ListView
            android:id="@+id/player_list"
            android:layout_width="275dp"
            android:layout_height="160dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke_black"
            android:padding="2px"></ListView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_add_player"
            style="@style/BlueButton"
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Ajouter Joueur" />

        <ListView
            android:id="@+id/remotes_list"
            android:layout_width="275dp"
            android:layout_height="160dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke_black"
            android:padding="2px"></ListView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_add_remote"
            style="@style/BlueButton"
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Ajouter Manette" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_launch_game"
            style="@style/BlueButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:text="Lancer la partie" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>